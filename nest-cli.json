{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "srcs/nest",
	"compilerOptions": {
		"plugins": ["@nestjs/swagger"],
		"assets": [
			{
				"include": "../public/**/*",
				"outDir": "dist/public",
				"watchAssets": true
			},
			{
				"include": "../views/**/*",
				"outDir": "dist/views",
				"watchAssets": true
			}
		]
	}
}
