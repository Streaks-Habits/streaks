<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="/styles/settings.css">

	<%- include("partial/favicons.ejs") %>

	<title>Streaks - Settings</title>
</head>
<body>
	<div id="side-nav">
		<div id="nav-header">
			<img src="/icons/logoname.svg" alt="streaks logo">
			<button id="nav-close">
				<svg><use xlink:href="/icons/cross.svg#icon"></use></svg>
			</button>
		</div>
		<a id="return-dashboard" href="/dashboard">
			<svg><use xlink:href="/icons/caret.svg#icon"></use></svg>
			<span>Dashboard</span>
		</a>
		<span class="section-separator">General</span>
		<ul class="side-nav-list">
			<li>
				<button>
					<span>Account</span>
					<svg><use xlink:href="/icons/caret.svg#icon"></use></svg>
				</button>
			</li>
			<li>
				<button>
					<span>Notifications</span>
					<svg><use xlink:href="/icons/caret.svg#icon"></use></svg>
				</button>
			</li>
			<li>
				<a href="/logout">
					<span>Logout</span>
					<svg><use xlink:href="/icons/caret.svg#icon"></use></svg>
				</a>
			</li>
		</ul>

		<span class="section-separator">Calendars</span>
		<ul class="calendars-list side-nav-list">
			<% calendars.forEach(function(cal) { %>
				<li>
					<button onclick="load_calendar_component('<%= cal.id %>')">
						<span><%= cal.name %></span>
						<svg><use xlink:href="/icons/caret.svg#icon"></use></svg>
					</button>
				</li>
			<% }); %>
		</ul>
	</div>
	<button id="nav-open">
		<svg><use xlink:href="/icons/menu.svg#icon"></use></svg>
	</button>
	<div id="content"></div>
	<script src="/js/settings/navigation.js"></script>
</body>
</html>
